@model EstateItemViewModel
@{
    ViewBag.Title = "Edit Items";
    Layout = "_Layout";
}

<h1>Edit Item @Model.Id</h1>


<form class="container" asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Currency"></label>
        <input class="btnselect" asp-for="@Model.Currency" />
        <span asp-validation-for="@Model.Currency"></span>
    </div>
    <div class="form-group">
        <label asp-for="HouseType"></label>
        <input class="btnselect" asp-for="@Model.HouseType" />
        <span asp-validation-for="@Model.HouseType"></span>
    </div>
    <div class="form-group">
        <label asp-for="Property"></label>
        <input class="btnselect" asp-for="@Model.Property" />
        <span asp-validation-for="@Model.Property"></span>
    </div>
    <div class="form-group">
        <label asp-for="Location"></label>
        <input class="btnselect" asp-for="Location" />
        <span asp-validation-for="Location"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input class="btnselect" asp-for="Price" />
        <span asp-validation-for="Price"></span>
    </div>
    <div class="form-group">
        <label asp-for="Details"></label>
        <textarea class="txtarea" rows="4" cols="50" asp-for="Details"> </textarea>
        <span asp-validation-for="Details"></span>
    </div>

    <img src="/Home/Get?path=@Model.Image">
    <br />

    <br />
    <input type="file" asp-for="ImageUploaded" />

    <br />
    <br />
    <button type="submit" class="button">Save</button>
    <button type="submit" asp-action="Index" class="button">Cancel</button>
    <button type="reset" class="button">Reset</button>


</form>